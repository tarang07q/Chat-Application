FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm ci

# Build the application
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

RUN npm run build

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 chatapp

COPY --from=builder --chown=chatapp:nodejs /app/dist ./dist
COPY --from=builder --chown=chatapp:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=chatapp:nodejs /app/package.json ./package.json

USER chatapp

EXPOSE 5000

CMD ["npm", "start"]
